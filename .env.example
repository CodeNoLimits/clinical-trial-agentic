# Clinical Trial Agentic - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration
# =============================================================================

# Google Gemini (Primary)
GOOGLE_API_KEY=your_gemini_api_key_here

# OpenAI (Alternative)
OPENAI_API_KEY=your_openai_api_key_here

# Model Selection
LLM_PROVIDER=google  # google | openai
LLM_MODEL=gemini-2.0-flash  # or gpt-4-turbo

# =============================================================================
# Vector Database
# =============================================================================

# ChromaDB (Development)
CHROMADB_HOST=localhost
CHROMADB_PORT=8001
CHROMADB_PERSIST_DIR=./data/chromadb

# Pinecone (Production - Optional)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=clinical-trials

# =============================================================================
# Embeddings
# =============================================================================

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# Medical models (better quality):
# EMBEDDING_MODEL=abhinand/MedEmbed-base-v0.1
# EMBEDDING_MODEL=dmis-lab/biobert-v1.1

# =============================================================================
# API Configuration
# =============================================================================

API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_RELOAD=true

# CORS Settings
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# =============================================================================
# UI Configuration
# =============================================================================

STREAMLIT_PORT=8501
STREAMLIT_THEME=dark

# =============================================================================
# Scoring & Confidence
# =============================================================================

# Self-consistency samples for confidence scoring
CONFIDENCE_SAMPLES=5
CONFIDENCE_THRESHOLD=0.80  # Below this, flag for human review

# =============================================================================
# Logging
# =============================================================================

LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# =============================================================================
# Database (for results storage)
# =============================================================================

DATABASE_URL=sqlite:///./data/results.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/clinical_trials
